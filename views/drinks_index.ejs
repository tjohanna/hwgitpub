<body>

<h1>Drinks Index Page</h1>

<ul>
    <% for(let i = 0; i < allDrinks.length; i++) { %>
    <li>
        
        <a href="/drinks/<%=i%>">
            <%const newAllDrinks = allDrinks[i].name;%>
            <%const drinkName = newAllDrinks.charAt(0).toUpperCase() + newAllDrinks.slice(1); %>
            <%=drinkName %></a>


          


        </li>
<% } %>
</ul>


    
</body>
